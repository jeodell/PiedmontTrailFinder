<%- include("./partials/header") %>
<div class="container mt-4">
  <h1 style="text-align: center; margin-bottom: 25px;">
    Edit <%= trail.name %>
  </h1>

  <div style="width: 30%; margin: 0 auto;">
    <form action="/trails/<%= trail._id %>/?_method=PUT" method="POST">
      <div class="form-group">
        <label for="trailName">Trail</label>
        <input type="text" class="form-control" name="trail[name]" id="trailName" value="<%= trail.name %>" />
      </div>
      <div class="form-group">
        <label for="imageURL">Image URL</label>
        <input type="text" class="form-control" name="trail[image]" id="imageURL" value="<%= trail.image %> " />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="trail[description]" id="description"><%= trail.description %></textarea>
      </div>
      <div class="d-flex align-items-center flex-column">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/trails/<%= trail._id %>" class="mb-4">Go Back</a>
      </div>
    </form>
  </div>
</div>

<%- include("./partials/footer") %>