<%- include("./partials/header") %>
<div class="container mt-4">
    <h1 style="text-align: center; margin-bottom: 25px;">New Trail</h1>

    <div style="width: 30%; margin: 0 auto;">
        <form action="/trails" method="POST">
            <div class="form-group">
                <label for="trailName">Trail</label>
                <input type="text" class="form-control" name="name" id="trailName" placeholder="Trail Name" />
            </div>
            <div class="form-group">
                <label for="imageURL">Image URL</label>
                <input type="text" class="form-control" name="image" id="imageURL" placeholder="Image URL" />
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" name="description" id="description" placeholder="Description"></textarea>
            </div>
            <div class="d-flex align-items-center flex-column">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/trails" class="mb-4">Go Back</a>
            </div>
        </form>
    </div>
</div>

<%- include("./partials/footer") %>